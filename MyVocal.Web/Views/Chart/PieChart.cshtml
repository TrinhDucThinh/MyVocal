
@{
    ViewBag.Title = "PieChart";
}

<h2>PieChart</h2>

<table border="0" cellpadding="0" cellspacing="0" width="400" height="300">
    <tr>
        <td>
            <div id="dvChart">
            </div>
        </td>
        <td>
            <div id="dvLegend">
            </div>
        </td>
    </tr>
</table>
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<script src="//cdn.jsdelivr.net/excanvas/r3/excanvas.js" type="text/javascript"></script>
<script src="//cdn.jsdelivr.net/chart.js/0./Chart.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        LoadChart();
    });
    function LoadChart() {
        $("#dvChart").html("");
        $("#dvLegend").html("");

        //Populate data for the chart
        var fruits = new Array();

        var mango = {};
        mango.text = "Từ đã thuộc";
        mango.value = 20;
        mango.color = "blue";
        fruits.push(mango);

        var orange = {};
        orange.text = "Từ chưa học";
        orange.value = 40;
        orange.color = "red";
        fruits.push(orange);

        var peach = {};
        peach.text = "Từ chưa học";
        peach.value = 40;
        peach.color = "yellow";
        fruits.push(peach);

        var el = document.createElement('canvas');
        $("#dvChart")[0].appendChild(el);

        //Fix for IE 8
        if ($.browser.msie && $.browser.version == "8.0") {
            G_vmlCanvasManager.initElement(el);
        }
        var ctx = el.getContext('2d');
        var chart = new Chart(ctx).Pie(fruits);

        for (var i = 0; i < fruits.length; i++) {
            var div = $("<div />");
            div.css("margin-bottom", "10px");
            div.html("<span style = 'display:inline-block;height:10px;width:10px;background-color:" + fruits[i].color + "'></span> "+ fruits[i].value +" "+ fruits[i].text);
            $("#dvLegend").append(div);
        }
    }
</script>



