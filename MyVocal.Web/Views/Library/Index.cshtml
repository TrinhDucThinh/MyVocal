@model IEnumerable<MyVocal.Web.Models.SubjectGroupViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Thư viện hệ thống";
    Layout = "~/Views/shared/_Layout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Assets/client/css/library/list_library.css")" rel="stylesheet" type="text/css" />
}

@section Scripts
{
    <script src="@Url.Content("~/Assets/client/js/library.js")"></script>
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h3 style="font-family:OpenSansSemiBold; margin-top:0px">
        Thư viện hệ thống
    </h3>
    <ol class="breadcrumb">
        <li><a href="/he-thong/trang-chu"><i class="fa fa-home" style="font-size:30px;color: #565c5f;"></i>Trang chủ</a></li>
        <li class="active">Danh sách chủ đề</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row" style="background-color:#4800ff; width:97% ; height:2px; margin-left:15px"></div>
    <div class="row">
        <div class="col-md-12">
        @foreach (var item in Model)
        {
            <div class="col-md-3">
                <div class="view">
                    <div class="caption">
                        <h4>@item.SubjecGroupName</h4>
                        <a href="" rel="tooltip" title="Thêm vào thư viện cá nhân"><span class="glyphicon glyphicon-plus" style="font-size:18px"></span></a>
                        <a href="@Url.Action("Index", "Topic",new {groupId=item.SubjectGroupId})" rel="tooltip" title="Xem chi tiết"><span class="glyphicon glyphicon-eye-open" style="font-size:18px"></span></a>
                    </div>
                    @{ var pathImage = ViewBag.pathServer + item.Image;}
                    <img src=@pathImage  class="img-responsive"/>
                </div>
                <div class="info" style="height:200px">
                    <p style="text-align:justify; color:#4e1818">
                        @item.Description
                    </p>

                </div>
                <div class="stats wb-red-bg">
                    <span class="glyphicon glyphicon-gift" rel="tooltip" title="Số lượng từ mới"> <strong>47</strong></span>
                    <div>
                        <span> <strong>Từ vựng mới</strong></span>
                    </div>

                </div>
            </div>
        }
        </div>

    </div>
</section><!-- /.content -->
